---
import MainLayout from "../../layouts/MainLayout.astro";
---

<MainLayout title="Info">
  <main class="container mx-auto my-10">
    <div class="grid grid-cols-2">
      <div class="flex flex-col items-center gap-10">
        <img src="/img/logo-footer.png" class="aspect-16/9 h-48" alt="logo" />
        <div class="w-full flex flex-col gap-4">
          <div>
            <span class="text-purple/80 font-semibold">Dirección</span>
            <p class="text-lg font-semibold text-zinc-600">Calle Teresa Gonzáles de Fannyng 369, José Olaya, Chiclayo</p>
          </div>
          <div>
            <span class="text-purple/80 font-semibold">Teléfono</span>
            <p class="text-lg font-semibold text-zinc-600">902995337</p>
          </div>
          <div>
            <span class="text-purple/80 font-semibold">Correo</span>
            <p class="text-lg font-semibold text-zinc-600">ariahappyclub@gmail.com</p>
          </div>
        </div>
      </div>
      <div class="flex flex-col items-center gap-4">
        <div class="border-2 border-gray-400/70 rounded-3xl overflow-hidden w-full">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d990.4939455841036!2d-79.85395924443165!3d-6.772801714961358!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x904cef1fc9cad425%3A0xaf677a26397f7a42!2sTeresa%20Gonzales%20de%20Fanning%20369%2C%20Chiclayo%2014009!5e0!3m2!1ses-419!2spe!4v1699722745018!5m2!1ses-419!2spe"
            allowfullscreen=""
            class="w-full h-[500px]"
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
        <a class="bg-purple/80 hover:bg-purple text-white py-4 w-56 text-center font-bold rounded-lg" href="https://maps.app.goo.gl/YU12JUKKxdbYD3kY9" target="_blank">Ir a Google Maps</a>
      </div>
    </div>
  </main>
</MainLayout>
