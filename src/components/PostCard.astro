---
import type { Post } from "@interfaces/post";
import { GetDiffTime } from "@utils/post-days";
interface Props {
  post: Post;
}

const { post } = Astro.props;

---

<section class="bg-smoke border-2 border-purple rounded-3xl">
  <div class="flex justify-between p-4 border-b-2 border-purple">
    <h2 class="text-2xl uppercase">{post.title}</h2>
    <span class="text-purple">{GetDiffTime(post.createdAt)}</span>
  </div>
  <div class="p-4 flex flex-col gap-4">
    <p>{post.body}</p>
    <div class="p-5">
      <img class="rounded-md" src={post.image} alt={post.title} />
    </div>
  </div>
</section>
